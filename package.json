{
  "name": "distro-security-detail",
  "version": "1.0.0",
  "description": "Custom discord.js bot for my server The Distro https://discord.io/the-distro",
  "main": "bot.js",
  "scripts": {
    "test": "echo \"Installing necessary scripts\" && npm install @discordjs/rest discord-api-types discord.js",
    "nm": "nodemon bot.js"
  },
  "type": "module",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "warn",
        {
          "before": true,
          "after": true
        }
      ],
      "brace-style": [
        "error",
        "allman",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": [
        "error",
        {
          "after": true
        }
      ],
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "dot-location": [
        "error",
        "property"
      ],
      "handle-callback-err": "off",
      "indent": [
        "warn",
        "tab",
        {
          "SwitchCase": 1,
          "ignoreComments": true
        }
      ],
      "max-nested-callbacks": [
        "error",
        {
          "max": 4
        }
      ],
      "max-statements-per-line": [
        "error",
        {
          "max": 2
        }
      ],
      "no-console": "off",
      "no-empty-function": "warn",
      "no-floating-decimal": "error",
      "no-shadow": [
        "error",
        {
          "allow": [
            "err",
            "resolve",
            "reject"
          ]
        }
      ],
      "no-unused-vars": "warn",
      "no-var": "warn",
      "no-lonely-if": "off",
      "no-undef": "off",
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "prefer-const": "warn",
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "semi": "error",
      "no-trailing-spaces": "off",
      "space-before-blocks": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "yoda": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/functnal/distro-security-detail.git"
  },
  "keywords": [
    "discord",
    "bot",
    "javascript"
  ],
  "author": "Brent Williams",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/functnal/distro-security-detail/issues"
  },
  "homepage": "https://github.com/functnal/distro-security-detail#readme",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "canvas": "^2.9.1",
    "discord-api-types": "^0.31.1",
    "discord.js": "^13.6.0",
    "nodemon": "^2.0.20"
  },
  "devDependencies": {
    "eslint": "^8.13.0"
  }
}
